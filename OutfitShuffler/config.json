{
    "modName": "OutfitShuffler",
    "displayName": "Outfit Shuffler",
    "minMcmVersion": 1,
    "content": [
        {
            "text": "<font size='24'>Outfit Shuffler</font> <font id='version' size='10'>v1.3</font>",
            "type": "text",
            "html": true
        },
        {
            "text": "General Settings",
            "type": "section"
        },
        {
            "text": "Enable Outfit Shuffling",
            "help": "Enable or disable this mod. Default: OFF",
            "type": "switcher",
            "id": "bIsEnabled:General",
            "valueOptions": {
                "sourceType": "ModSettingBool"
            }
        },
		{
            "text": "<br>",
            "html": true
        },
        {
            "text": "Change Followers",
            "help": "Changes Followers with the long timer.",
            "type": "switcher",
            "id": "bChangeFollowers:General",
            "valueOptions": {
                "sourceType": "ModSettingBool"
            }
        },
		        {
            "text": "Change Followers (Short)",
            "help": "Changes Followers with the short timer.",
            "type": "switcher",
            "id": "bChangeFollowersOnShort:General",
            "valueOptions": {
                "sourceType": "ModSettingBool"
            }
        },
        {
            "text": "<br>",
            "html": true
        },
        {
            "text": "Scanning",
            "type": "section"
        },
		{
            "text": "Scanning Distance",
            "help": "How many units away to scan.",
            "type": "slider",
            "id": "fScanRange:General",
            "valueOptions": {
                "sourceType": "ModSettingFloat",
                "min": 500.0,
                "max": 10000.0,
                "step": 100.0
            }
        },
		        {
            "text": "Timers and Delays",
            "type": "section"
        },
		{
            "text": "Delay Time",
            "help": "Wait between certain event to keep them from happening too fast.",
            "type": "slider",
            "id": "fWaitTime:General",
            "valueOptions": {
                "sourceType": "ModSettingFloat",
                "min": 0.0,
                "max": 10.0,
                "step": 0.1
            }
        },
		{
            "text": "Short Timer",
            "help": "Puts new people in the scan range into new outfits.",
            "type": "slider",
            "id": "fShortTime:General",
            "valueOptions": {
                "sourceType": "ModSettingFloat",
                "min": 5.0,
                "max": 600.0,
                "step": 1.0
            }
        },
		{
            "text": "Multiplier",
            "help": "How many times to run the short timer before changing EVEYONE'S outfits, regardless of what they are wearing.",
            "type": "slider",
            "id": "iLongMult:General",
            "valueOptions": {
                "sourceType": "ModSettingInt",
                "min": 5,
                "max": 1111,
                "step": 1
            }
        }
    ]
}